<%- include('partials/header'); -%>
<style>
    .main {
        padding: 2% 2%;
    }

    .btn-flat i {
        font-size: 0.8rem;
    }

    @media(min-width: 768px) {
        .card img {
            height: 3vw;
            width: 3vw;
        }

        .add {
            display: contents;
        }
    }

    @media(max-width:768px) {
        .add {
            display: contents;
        }
    }
</style>

<body class="has-fixed-sidenav">

    <%- include('partials/sidebar'); -%>

    <section>
        <%- include('partials/banner'); -%>

    </section>
    <div class="main">
        <div class="col s12 m8 offset-m2 l6 offset-l3">
            <div class="card-panel grey lighten-5 z-depth-1">
                <div class="row valign-wrapper">
                    <div class="col s2">
                        <img src="images/img_avatar.png" alt="" class="circle responsive-img">
                    </div>
                    <div class="col s9">
                        <span style="font-weight: bold;"><%= user.name %></span><br>
                        <span>Assistant Professor</span><br>
                        <span><i class="fa fa-envelope">&nbsp;</i><%= user.email %></span>
                    </div>
                    <div class="col s1">
                        <i class="fa fa-pencil"></i><br>
                        <a class="waves-effect waves-teal btn-flat" style="font-size:medium;margin:-7px 0px 105px -25px">Edit</a>
                    </div>
                </div>
            </div>
            <div class="card-panel grey lighten-5 z-depth-1">
                <div class="row">
                    <div class="input-field col s6">
                        <input placeholder="Research interest fields" name="research_interests" type="text" class="validate">
                        <label for="research_interests">Research Interest</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <input name="email" type="email" class="validate">
                        <label for="email">Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <input name="telephone" type="tel" class="validate">
                        <label for="telephone">Phone</label>
                    </div>
                </div>
            </div>
            <div class="card-panel grey lighten-5 z-depth-1">
                <div class="row">
                    <div class="col s11"><span style="font-weight:bold;">Subjects Teaching in Department</span></div>
                    <div class="col s1 add">
                        <a class="waves-effect waves-teal btn-flat" style="font-size:medium;">Add<i class="fa fa-plus fa-sm "></i></a>
                    </div>
                </div>
            </div>
            <div class="card-panel grey lighten-5 z-depth-1">
                <div class="row">
                    <div class="col s11"><span style="font-weight:bold;">Memberships & Society</span></div>
                    <div class="col s1 add">
                        <a class="waves-effect waves-teal btn-flat" style="font-size:medium;">Add<i class="fa fa-plus fa-sm"></i></a>
                    </div>
                </div>
            </div>
            <div class="card-panel grey lighten-5 z-depth-1">
                <div class="row">
                    <div class="col s11"><span style="font-weight:bold;">Educational Qualification</span></div>
                    <div class="col s1 add">
                        <a class="waves-effect waves-teal btn-flat" style="font-size:medium;">Add<i class="fa fa-plus fa-sm"></i></a>
                    </div>
                </div>
            </div>
            <div class="card-panel grey lighten-5 z-depth-1">
                <div class="row">
                    <div class="col s11"><span style="font-weight:bold;">Current Administrative Responsibility</span></div>
                    <div class="col s1 add">
                        <a class="waves-effect waves-teal btn-flat" style="font-size:medium;">Add<i class="fa fa-plus fa-sm"></i></a>
                    </div>
                </div>
            </div>
            <div class="card-panel grey lighten-5 z-depth-1">
                <div class="row">
                    <div class="col s11"><span style="font-weight:bold;">Past Administrative Responsibility</span></div>
                    <div class="col s1 add">
                        <a class="waves-effect waves-teal btn-flat" style="font-size:medium;">Add<i class="fa fa-plus fa-sm"></i></a>
                    </div>
                </div>
            </div>
            <div class="card-panel grey lighten-5 z-depth-1">
                <div class="row">
                    <div class="col s11"><span style="font-weight:bold;">Work Experiences</span></div>
                    <div class="col s1 add">
                        <a class="waves-effect waves-teal btn-flat" style="font-size:medium;">Add<i class="fa fa-plus fa-sm"></i></a>
                    </div>
                </div>
            </div>
            <div class="card-panel grey lighten-5 z-depth-1">
                <div class="row">
                    <div class="col s11"><span style="font-weight:bold;">Add Bib File</span></div>
                    <div class="col s1 add">
                        <a class="waves-effect waves-teal btn-flat" style="font-size:medium;">Add<i class="fa fa-plus fa-sm"></i></a>
                    </div>
                </div>
            </div>
        </div>
</body>
<script>
    var listitem = document.getElementById('profile');
    listitem.classList.add('active')
</script>
<%- include('partials/footer') -%>