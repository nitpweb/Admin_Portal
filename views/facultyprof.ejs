<%- include('partials/header'); -%>
<style>
    .main {
        padding: 2% 2%;
    }

    .btn-flat i {
        font-size: 0.8rem;
    }

    @media(min-width: 768px) {
        .card img {
            height: 3vw;
            width: 3vw;
        }

        .add {
            display: contents;
        }
    }

    @media(max-width:768px) {
        .add {
            display: contents;
