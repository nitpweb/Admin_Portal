<%- include('partials/header'); -%>

<style>
  .main {
    padding: 2% 2%;
  }

  @media (min-width: 768px) {
    .main {
      padding: 2% 5%;
    }

    .tools {
      position: relative;
      top: 8px;
    }

    .row {
      margin-bottom: 0;
    }
  }

  .add-btn {
    border-radius: 10px;
  }

  .add-btn span {
    background-color: green;
    border: 100%;
  }

  .card-panel {
    padding: 14px;
  }

  .notice-title {
    margin: 8px auto;
  }

  .icons {
    /* padding: 10px; */
    background: white;
    border-radius: 10px;
    height: 73px;
    width: 100px;
    text-align: center;
    cursor: pointer;
  }

  .icons i {
    display: block;
    font-size: 2rem;
  }
